
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper to check if the user is the owner of the data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Master Admin Helper
    function isMasterAdmin() {
      return request.auth != null && request.auth.token.email == 'specsxr@gmail.com';
    }

    // REGISTRATION CODES: Master access control
    match /registrationCodes/{code} {
      // Anyone can 'get' a code to check its validity during registration
      allow get: if true;
      
      // Admin can list, create, and delete codes
      allow list, create, delete: if isMasterAdmin();
      
      // Allow update if:
      // 1. User is Master Admin (for toggling active/inactive or finalizing deletion)
      // 2. OR a new user is marking the code as 'used' during registration
      // 3. OR an existing user is requesting deletion (status -> pending_deletion)
      allow update: if isMasterAdmin() || (
        request.auth != null && (
          // Case: Registration (for unused codes)
          (resource.data.isUsed == false && 
           request.resource.data.isUsed == true &&
           request.resource.data.userId == request.auth.uid)
          ||
          // Case: User requesting deletion (for codes they own)
          (resource.data.userId == request.auth.uid)
          ||
          // Fallback for older accounts using email match
          (resource.data.userEmail == request.auth.token.email)
        )
      );
    }

    // PRIMARY OWNER ACCESS: Grant explicit access to all specific collections
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isMasterAdmin();
      
      match /products/{id} { allow read, write: if isOwner(userId); }
      match /shopProducts/{id} { allow read, write: if isOwner(userId); }
      match /shopConfig/{id} { allow read, write: if isOwner(userId); }
      match /procurements/{id} { allow read, write: if isOwner(userId); }
      match /customers/{id} { allow read, write: if isOwner(userId); }
      match /sales/{id} { allow read, write: if isOwner(userId); }
      match /aiMessages/{id} { allow read, write: if isOwner(userId); }
      match /advisorMessages/{id} { allow read, write: if isOwner(userId); }
      match /notes/{id} { allow read, write: if isOwner(userId); }
      
      match /customers/{customerId}/bakiRecords/{recordId} {
        allow read, write: if isOwner(userId);
      }
    }

    // PUBLIC READ ACCESS: Specifically allow anyone to view shop data
    match /users/{userId}/shopProducts/{productId} {
      allow get, list: if true;
    }

    match /users/{userId}/shopConfig/{configId} {
      allow get: if true;
    }

    // Default deny for everything else
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
