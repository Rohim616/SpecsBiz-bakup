
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return resource != null && isOwner(userId);
    }

    match /users/{userId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);

      // Public access for Shop feature (with code entry UI protection)
      match /products/{productId} {
        allow get, list: if true; // Products are publicly viewable for the shop
        allow create: if isOwner(userId);
        allow update, delete: if isExistingOwner(userId);
      }

      match /shopConfig/{configId} {
        allow get: if true; // Public needs to check if shop is active
        allow write: if isOwner(userId);
      }

      match /sales/{saleId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isExistingOwner(userId);
      }

      match /procurements/{procurementId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isExistingOwner(userId);
      }

      match /aiMessages/{messageId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isExistingOwner(userId);
      }

      match /advisorMessages/{messageId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isExistingOwner(userId);
      }

      match /customers/{customerId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isExistingOwner(userId);

        match /bakiRecords/{recordId} {
          allow get, list: if isOwner(userId);
          allow create: if isOwner(userId);
          allow update, delete: if isExistingOwner(userId);
        }
      }

      match /notes/{noteId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isExistingOwner(userId);
      }

      match /reports/{reportId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isExistingOwner(userId);
      }
    }

    match /{path=**} {
      allow read, write: if false;
    }
  }
}
