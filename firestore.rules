
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      // Allow owner full access to their own profile and sub-collections
      allow read, write: if isOwner(userId);

      // Public access for Shop feature
      match /products/{productId} {
        allow get, list: if true; 
        allow write: if isOwner(userId);
      }

      match /shopProducts/{productId} {
        allow get, list: if true; 
        allow write: if isOwner(userId);
      }

      match /shopConfig/{configId} {
        allow get: if true; 
        allow write: if isOwner(userId);
      }

      match /sales/{saleId} {
        allow get, list: if isOwner(userId);
        allow write: if isOwner(userId);
      }

      match /procurements/{procurementId} {
        allow get, list: if isOwner(userId);
        allow write: if isOwner(userId);
      }

      match /aiMessages/{messageId} {
        allow get, list: if isOwner(userId);
        allow write: if isOwner(userId);
      }

      match /advisorMessages/{messageId} {
        allow get, list: if isOwner(userId);
        allow write: if isOwner(userId);
      }

      match /customers/{customerId} {
        allow get, list: if isOwner(userId);
        allow write: if isOwner(userId);

        match /bakiRecords/{recordId} {
          allow get, list: if isOwner(userId);
          allow write: if isOwner(userId);
        }
      }

      match /notes/{noteId} {
        allow get, list: if isOwner(userId);
        allow write: if isOwner(userId);
      }

      match /reports/{reportId} {
        allow get, list: if isOwner(userId);
        allow write: if isOwner(userId);
      }
    }

    match /{path=**} {
      allow read, write: if false;
    }
  }
}
